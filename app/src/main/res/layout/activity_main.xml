<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nyc.c4q.tarynking.simonsaysmaxtaryn.SimonMaxTarynActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Simon Says Game!"
        android:id="@+id/textSimonSays" />

    <Button
        android:text="GREEN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:layout_marginTop="71dp"
        android:id="@+id/button_green"
        android:background="@color/green"
        android:layout_below="@+id/textSimonSays"
        android:layout_alignParentStart="true" />

    <Button
        android:text="RED"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_green"
        android:layout_toEndOf="@+id/textSimonSays"
        android:layout_marginStart="14dp"
        android:id="@+id/button_red"
        android:background="@color/red"
        android:layout_alignBottom="@+id/button_green"
        style="@style/Widget.AppCompat.Button.Colored" />

    <Button
        android:text="BLUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_green"
        android:layout_alignEnd="@+id/button_green"
        android:layout_marginTop="97dp"
        android:background="@color/blue"
        android:id="@+id/button_blue" />

    <Button
        android:text="START"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_start"
        android:layout_below="@+id/button_blue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_start"
        android:layout_toStartOf="@+id/button_red"
        android:layout_marginTop="24dp"
        android:id="@+id/textView" />

    <Button
        android:text="YELLOW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:id="@+id/button_yellow"
        android:layout_above="@+id/button_start"
        android:layout_toEndOf="@+id/button_start" />
</RelativeLayout>
