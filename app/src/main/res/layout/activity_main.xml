<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nyc.c4q.tarynking.simonsaysmaxtaryn.SimonMaxTarynActivity">

    <Button
        android:id="@+id/button_start"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="Start"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_yellow"
        android:text="yellow"
        android:layout_marginTop="45dp"
        android:background="@color/yellow"
        android:layout_width="200dp"
        android:layout_height="240dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button_red" />

    <Button
        android:id="@+id/button_red"
        android:text="red"
        android:layout_marginTop="45dp"
        android:background="@color/red"
        android:layout_width="190dp"
        android:layout_height="240dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:id="@+id/button_blue"
        android:text="blue"
        android:background="@color/blue"
        android:layout_width="225dp"
        android:layout_height="260dp"
        android:layout_below="@+id/button_yellow"
        android:layout_alignParentStart="true"
        />

    <Button
        android:id="@+id/button_green"
        android:text="green"
        android:background="@color/green"
        android:layout_width="200dp"
        android:layout_height="260dp"
        android:layout_below="@+id/button_red"
        android:layout_toEndOf="@+id/button_yellow"/>
</RelativeLayout>